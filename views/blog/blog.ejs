<div id="body">
    <h1><span>blog</span></h1>
    <div>
        <ul>
            <% blogs.forEach(blog => { %>
            <li>
                <a href="<%= `/blogs/${blog._id}` %>" class="figure">
                    <img src="<%= blog.imageURL %>" alt="">
                </a>
                <div>
                    <h3><%= blog.title %></h3>
                    <p>
                        <%= blog.summary %>
                    </p>
                    <a href="<%= `/blog/${blog._id}` %>" class="more">read this</a>
                </div>
            </li>
            <% }); %>
        </ul>
    </div>
</div>