<div id="body">
    <h1><span>Create a New Blog Post</span></h1>
    <form action="<%=`/blog/create`%>" method="POST">
        <input type="text" name="title" id="title" placeholder="Title" required>
        <input type="text" name="summary" id="summary" placeholder="Summary" required>
        <input type="text" name="imageURL" id="imageURL" placeholder="Image URL (name.jpg)" required>
        <input type="text" name="datePosted" id="datePosted" placeholder="Date Posted" required>
        <textarea name="content" id="content" placeholder="Content" required></textarea>
        <input type="submit" name="send" id="send" value="send">
    </form>
</div>